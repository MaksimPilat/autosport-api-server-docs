{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "models/*": ["./src/models/*"],
      "general/*": ["./src/general/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": [
    "src/general/filters/all-exceptions.filter.ts",
    "src/general/utils/translation.utils.ts",
    "src/general/services/common-pm2.service.ts"
  ]
}
