{
  "name": "backend",
  "version": "0.0.1",
  "description": "API service",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "release": "standard-version",
    "deps:update": "ncu -u && npm install && npm audit fix &&  git add package*.json && git commit -m \"chore: update dependencies\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --forceExit",
    "test:e2e": "jest --config ./test/jest-e2e.json --testTimeout=10000 --runInBand --forceExit"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/schedule": "^3.0.2",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.3.3",
    "@rodewitsch/carbone": "^4.4.1",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "nest-winston": "^1.9.3",
    "nestjs-cls": "^4.3.0",
    "nestjs-i18n": "^10.3.7",
    "nestjs-real-ip": "^3.0.1",
    "pdfmake": "^0.2.7",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "sharp": "^0.32.6",
    "swagger-ui-customization": "^1.0.4",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "^1.0.37",
    "unp-validator": "^1.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.12",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.5.0",
    "@types/qrcode": "^1.5.1",
    "@types/supertest": "^2.0.12",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-extended": "^4.0.2",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
